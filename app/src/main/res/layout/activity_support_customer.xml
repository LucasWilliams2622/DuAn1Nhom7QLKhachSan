<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_advise"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/images"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:src="@drawable/feedback" />

        <TextView
            android:id="@+id/tvLH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Phiếu Hỗ Trợ"
            android:textColor="#121315"
            android:textSize="30sp"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/edtNameCustomer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:background="@drawable/design_edit_square"
            android:ems="10"
            android:gravity="left"
            android:hint="Họ và tên"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/edtPhoneNumberCustomer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/design_edit_square"
            android:ems="10"
            android:gravity="left"
            android:hint="Số điện thoại"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:textColorHint="@color/black" />


        <EditText
            android:id="@+id/edtContentSupport"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/design_edit_square"
            android:ems="10"
            android:gravity="left"
            android:hint="Nội dung: "
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btnSupportCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/design_green_btn"
            android:backgroundTint="#40D646"
            android:drawableLeft="@drawable/messenger_bubble_large_white"
            android:text="Gửi hỗ trợ"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnCallSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_green_btn"
            android:backgroundTint="#40D646"
            android:drawableLeft="@android:drawable/stat_sys_phone_call"
            android:text="Gọi tổng đài hỗ trợ"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnBackToMainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/design_green_btn"
            android:drawableLeft="@drawable/icreturn"
            android:text="Back"
            android:textColor="#0DED16"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>