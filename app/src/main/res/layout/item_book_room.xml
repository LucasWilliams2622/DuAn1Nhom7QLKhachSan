<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f5"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="442dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        android:background="@drawable/design_of_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="366dp"
            android:paddingRight="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/hotel_room_1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="210dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvNameBookRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="15dp"
        android:paddingTop="4dp"
        android:paddingRight="15dp"
        android:text="Tên phòng: R002"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvTypeBookRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="4dp"
        android:paddingRight="15dp"
        android:text="Loại phòng: King Room"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvPriceBookRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="4dp"

        android:paddingRight="15dp"
        android:text="Giá phòng: 999$"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/edtCheckInDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chọn ngày check in:"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
android:background="@drawable/design_edit_no_stoke"
        android:textColorHint="@color/black"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edtCheckOutDay"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày check out:"
        android:paddingLeft="15dp"
android:background="@drawable/design_edit_no_stoke"
        android:paddingTop="10dp"

        android:textColorHint="#323030"
        android:textSize="17dp" />


    <Button
        android:id="@+id/btnBookRoom"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"

        android:background="@drawable/design_green_btn"
        android:backgroundTint="#DAF1DB"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:text="Đặt phòng"
        android:textColor="@color/green"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.004" />


</LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>