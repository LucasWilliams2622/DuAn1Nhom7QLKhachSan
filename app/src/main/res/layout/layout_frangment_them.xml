<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE7D6"
    android:padding="16dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/images"
            android:layout_width="400dp"
            android:layout_height="126dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvLH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0D1750"
            android:textSize="30sp"
            android:gravity="center"
            android:text="Phiếu Hỗ Trợ" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/images1"
                android:layout_width="362dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:src="@drawable/hinh3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtmanpp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Họ và tên" />

                <EditText
                    android:id="@+id/edttennpp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="ID User" />


                <EditText
                    android:id="@+id/edtgioithieu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Nội dung" />

                <Button
                    android:id="@+id/btnthem"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="Gửi hỗ trợ"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>