<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_advise"
android:padding="16dp"
android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/images"
        android:layout_width="400dp"
        android:layout_height="126dp"
        android:src="@drawable/feedback" />


    <TextView
        android:id="@+id/tvLH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phiếu Hỗ Trợ"
        android:textColor="#121315"
        android:textStyle="italic|bold"
        android:textSize="30sp" />

<!--    <LinearLayout-->
<!--        android:layout_marginTop="2dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:orientation="horizontal">-->




<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:orientation="vertical">-->

            <EditText
                android:id="@+id/edtNameUserSp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:ems="10"

                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:gravity="left"
                android:background="@drawable/design_of_edt"
                android:textColorHint="@color/black"
                android:inputType="textPersonName"
                android:hint="Họ và tên" />

            <EditText
                android:id="@+id/edtSDTUserSp"


                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:gravity="left"
                android:background="@drawable/design_of_edt"
                android:textColorHint="@color/black"

                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Số điện thoại" />


            <EditText
                android:id="@+id/edtContentSp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textColorHint="@color/black"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:gravity="left"
                android:background="@drawable/design_of_edt"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Nội dung: " />

            <Button
                android:id="@+id/btnSendReport"
                android:drawableLeft="@drawable/messenger_bubble_large_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Gửi hỗ trợ"
                android:textStyle="bold|italic"
                android:background="@drawable/design_green_btn"
                app:backgroundTint="@null"
                android:backgroundTint="#40D646"
                android:layout_marginTop="20dp"
                android:textAllCaps="false" />


</LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
